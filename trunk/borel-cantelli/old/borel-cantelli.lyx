\begin_inset Formula $(Ω,Α,Ρ)$
\end_inset

 and set 
\begin_inset Formula $\limsup_{n\text{→∞}}A_{n}=A$
\end_inset

.
 
\end_layout

\begin_layout Standard
If 
\begin_inset Formula $Σ_{n=1}^{∞}P(A_{n})=\text{∞}$
\end_inset

 and, 
\begin_inset Formula $\limsup_{n\to\infty}\frac{\text{(Σ}_{i=1}^{\text{∞}}P(A_{i}))^{2}}{\Sigma_{i=1}^{n}\text{Σ}_{j=1}^{n}P[A_{i}\cap A_{j}]}=\alpha>0$
\end_inset

.
 then,
\end_layout

