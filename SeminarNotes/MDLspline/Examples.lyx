(
\begin_inset Quotes eld
\end_inset


\begin_inset Formula $j$
\end_inset

th estimated height
\begin_inset Quotes erd
\end_inset

)
\begin_inset Formula $=\frac{1}{2}\Sigma_{j=1}^{\hat{m}+1}log_{2}\hat{l_{j}}$
\end_inset

, when 
\begin_inset Formula $\hat{r}=0$
\end_inset

.
\end_layout

\begin_layout Standard
code length for 
\begin_inset Formula $y$
\end_inset

 given 
\begin_inset Formula $\hat{\theta}=\{\hat{r},\hat{m},\hat{k},\hat{b},\hat{\beta}\}$
\end_inset

(
\begin_inset Formula $L(y|\hat{\theta})$
\end_inset

):
\end_layout

\begin_layout Standard
\begin_inset Formula $L(y|\hat{\theta})=\frac{n}{2}log_{2}\{\frac{RSS(\hat{\theta})}{n}\}+C$
\end_inset

, where 
\begin_inset Formula $C$
\end_inset

 is a negligible term and 
\begin_inset Formula $RSS(\hat{\theta})=\Sigma\{y_{i}-\hat{f}(x_{i})\}^{2}$
\end_inset

.
 
\end_layout

